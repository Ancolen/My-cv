@using My_cv.Models.Entity
@model List<Table_Hobbies>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin_Layoud.cshtml";
}

<br />
<h3>Hobbies List</h3>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hobby</th>
        <th>Description</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Hobby_0</td>
            <td>@item.Hobby_1</td>
            <td><a href="/Interests/EditHobby/@item.ID" class="btn btn-danger">Edit</a></td>
            <td><a href="/Interests/DeleteHobby/@item.ID" class="btn btn-warning">Delete</a></td>
        </tr>
    }
</table>
<br />
    <a href="/Interests/AddHobby" class="btn btn-primary">Add New Hobby</a>