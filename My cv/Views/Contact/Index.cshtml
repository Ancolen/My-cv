@using My_cv.Models.Entity
@model List<Table_Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin_Layoud.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                     <div class="time-label">
                                         <span class="bg-danger">@(((DateTime)item.Date).ToString("dd-MMMM-yyyy"))</span>
                                     </div>
                                     <div>
                                         <i class="fas fa-comments bg-blue"></i>
                                         <div class="timeline-item">
                                             <span class="time">@item.Mail</span>
                                             <h3 class="timeline-header"><a href="#">@item.NameSurname</a>  @item.Subject</h3>
                                             <div class="timeline-body">@item.Message</div>
                                         </div>
                                     </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>