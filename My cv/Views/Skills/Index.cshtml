@using My_cv.Models.Entity;
@model List<Table_skills>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin_Layoud.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3>My Skills List</h3>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Skills</th>
                                            <th>Rate</th>
                                            <th style="width: 75px">Percent</th>
                                            <th style="width: 40px">Edit</th>
                                            <th style="width: 40px">Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Skills</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="progress bg-blue" style="width: @item.Rate"></div>
                                                    </div>
                                                </td>
                                                <td><span class="badge bg-blue">@item.Rate%</span></td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/Skills/EditSkill/@item.ID">Edit</a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Skills/DeleteSkill/@item.ID">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <br />
                                <a href="/Skills/AddSkill" class="btn btn-primary">Add New Skill</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
