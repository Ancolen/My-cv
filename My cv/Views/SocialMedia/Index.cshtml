@using My_cv.Models.Entity
@model List<Table_Social_media>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin_Layoud.cshtml";
}

<br />
<h3>Social Media List</h3>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Platform</th>
        <th>Link</th>
        <th>Icon Name</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Link</td>
            <td>@item.Icon</td>
            <td><a href="/SocialMedia/EditSocialMedia/@item.ID" class="btn btn-danger">Edit</a></td>
            <td><a href="/SocialMedia/DeleteSocialMedia/@item.ID" class="btn btn-warning">Delete</a></td>
        </tr>
    }
</table>
<br />
<a href="/SocialMedia/AddSocialMedia" class="btn btn-primary">Add New Social Media Account</a>